notas = []

while True:
    nota = int(input("Digite uma nota ou -1 para sair "))
    if nota == -1:
        break

    notas.append(nota)
soma = 0
for i in notas:
    soma = soma + i
    media = soma / len(notas) #o len soma a quantidade de itens na lista
print(f'Suas notas foram {notas} e a soma delas foi {soma} e a m√©dia foi {media}')